{
	"editor_version": 3,
	"name": "Tractor Beam",
	
	"editor": {
		"size": "(1,1,1)",
		
		"options": {
			"start_enabled": {
				"type": "toggle",
				"value": true,
				"name": "Start Enabled"
			},
			"start_reversed": {
				"type": "toggle",
				"value": true,
				"name": "Start Reversed"
			}
		}
	},
	
	"export": {
		"embedded_voxels": [
			"(0,-1,0)"
		],
		"connections": {
			"inputs": {
				"active": {
					"name": "Change active state",
					"activate": "instance:fun_enable;Trigger,,0,-1",
					"deactivate": "instance:fun_disable;Trigger,,0,-1"
				},
				"polarity": {
					"name": "Change polarity",
					"activate": "instance:fun_orange;Trigger,,0,-1",
					"deactivate": "instance:fun_blue;Trigger,,0,-1"
				}
			}
		},
		"conditions": [
			{
				"type": "add_instance",
				"instance": "tractor_beam.vmf"
			}
		]
	}
}
